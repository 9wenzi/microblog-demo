doctype html
html
	head
		meta(charset="utf-8")
		title= title
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		nav.navbar.navbar-default.navbar-fixed-top(role="navigation")
			div.container
				div.navbar-header
					a.navbar-brand(href="/") Microblog
					if !user
						ul.nav.navbar-nav
							li.active
								a(href="/") Home
							li
								a(href="/login") Login
							li
								a(href="/reg") Regsister
					else
						ul.nav.navbar-nav
							li.active
								a(href="/") Home
							li
								a(href="/logout") Logout
						
		div#container.container
			if success
				div.alert.alert-success
					p #{success}
			if error
				div.alert.alert-danger
					p #{error}

			block content
				
			hr
			footer
				p
					a(href="",target="_blank") coo
					span @2016 

		script(type='text/javascript', src='/javascripts/jquery-2.2.1.js')
		script(type='text/javascript', src='/javascripts/bootstrap.js')


